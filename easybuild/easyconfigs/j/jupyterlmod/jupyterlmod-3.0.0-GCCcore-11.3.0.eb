easyblock = 'PythonBundle'

name = 'jupyterlmod'
version = '3.0.0'

homepage = 'https://pypi.org/project/jupyterlmod/'
description = """Jupyter interactive notebook server extension that allows user to select software modules
 to load with Lmod before launching kernels."""

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}

builddependencies = [
    ('binutils', '2.38'),
]

dependencies = [
    ('Python', '3.10.4'),
    ('JupyterHub', '3.0.0'),
    ('jupyter-server', '1.21.0'),
]

use_pip = True

exts_list = [
    ('jupyter_server', '1.21.0', {
        'checksums': ['d0adca19913a3763359be7f0b8c2ea8bfde356f4b8edd8e3149d7d0fbfaa248b'],
    }),
    (name, version, {
        'checksums': ['da769078650766b1fca6ef1e673d15ddd6ce7428001e05cc364cba246a77c3fe'],
    }),
]

# Add the notebook extension to the search path for jupyter notebooks
modextrapaths = {
    'JUPYTER_PATH': 'share/jupyter/',
}

sanity_check_paths = {
    'dirs': ['lib/python%(pyshortver)s/site-packages/jupyterlmod'],
    'files': [],
}

sanity_pip_check = True

moduleclass = 'tools'
