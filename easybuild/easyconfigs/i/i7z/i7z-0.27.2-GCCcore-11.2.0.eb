    'ef895fa04c42cb926c3fd07a1274e16a8606c1ef836a37865bb620e725b317c5',  # i7z-0.27.2.tar.gz
    'e6422302070b450c61ba4fd35e01eb4b1c112dd6c89250363ab94a62e5092e68',  # i7z-0.27.2_fix_gcc-10.patch
]

