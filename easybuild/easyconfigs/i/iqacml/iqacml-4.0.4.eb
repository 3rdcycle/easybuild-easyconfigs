name='iqacml'
version='4.0.4'

homepage='http://software.intel.com/en-us/intel-cluster-toolkit-compiler/'
description="""Intel Cluster Toolkit Compiler Edition provides Intel C,C++ and fortran compilers, QLogic MPI and AMD Core Math Library (ACML)."""

toolkit={'name':'dummy','version':'dummy'}

comp='icc'
compf='ifort'
compv='2011.6.233'
mpi='QLogicMPI'
mpiv='2.9-926.1005_rhel5_qlc'
mlib='ACML'
mlibv='4.4.0-ifort-64bit'
blacs='BLACS'
blacsv='1.1'

## deps for interface build
dependencies=[{'name':comp,'version':compv},
              {'name':compf,'version':compv},
              {'name':mpi,'version':mpiv},
              {'name':mlib,'version':mlibv},
              {'name':blacs,'version':'%s-%s-%s-%s-%s'%(blacsv,comp,compv,mpi,mpiv)},
              {'name':'ScaLAPACK','version':'1.8.0-%s-%s-%s-%s-%s-%s-%s-%s'%(comp,compv,mpi,mpiv,mlib,mlibv,blacs,blacsv)}]

## compiler class
moduleclass='compiler'

modextravars={'MPICH_CC':'icc',
              'MPICH_F77':'ifort',
              'MPICH_F90':'ifort'
             }
