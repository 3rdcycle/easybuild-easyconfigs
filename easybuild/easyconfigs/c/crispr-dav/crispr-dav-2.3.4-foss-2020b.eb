#     ('pysamstats', '1.1.2', {
#         'source_urls': ['https://pypi.python.org/packages/source/p/pysamstats/'],
#     }),
# ]

sanity_check_paths = {
    'files': [],
    'dirs': ['Modules', 'Examples', 'Rscripts'],
}

moduleclass = 'bio'
