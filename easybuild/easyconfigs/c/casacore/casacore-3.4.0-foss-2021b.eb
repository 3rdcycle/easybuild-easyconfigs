easyblock = 'CMakeMake'

name = 'casacore'
version = '3.4.0'

homepage = 'https://github.com/casacore/casacore'
description = "A suite of C++ libraries for radio astronomy data processing."

toolchain = {'name': 'foss', 'version': '2021b'}

source_urls = ['https://github.com/casacore/casacore/archive']
sources = ['v%(version)s.tar.gz']
checksums = [
    '31f02ad2e26f29bab4a47a2a69e049d7bc511084a0b8263360e6157356f92ae1',  # v3.4.0.tar.gz
]

builddependencies = [
    ('binutils', '2.37'),
    ('CMake', '3.22.1'),
    ('flex', '2.6.4'),
    ('Bison', '3.7.6'),
]

dependencies = [
    ('CFITSIO', '3.49'),
    ('wcslib', '7.11'),
    ('HDF5', '1.12.1'),
    ('SciPy-bundle', '2021.10'),
    ('Boost.Python', '1.77.0'),
    ('ncurses', '6.2'),
]

configopts = ' -DBUILD_PYTHON3=ON -DBUILD_PYTHON=OFF -Wno-dev '

sanity_check_paths = {
    'files': [('lib/libcasa_casa.%s', 'lib/libcasa_mirlib.%s' % SHLIB_EXT, 'lib64/libcasa_ms.%s' % SHLIB_EXT)],
    'dirs': ['include/casacore'],
}

moduleclass = 'lib'
