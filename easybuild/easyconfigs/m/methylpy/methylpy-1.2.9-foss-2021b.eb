easyblock = 'PythonPackage'

name = 'methylpy'
version = '1.2.9'

homepage = 'https://pypi.python.org/pypi/methylpy'
description = """Bisulfite sequencing data processing and differential methylation analysis."""

toolchain = {'name': 'foss', 'version': '2021b'}

source_urls = ['https://github.com/yupenghe/methylpy/archive/']
sources = ['%(version)s.tar.gz']
patches = ['methylpy-1.2.9-foss-2021b-fixSetupConfig.patch']
checksums = [
    '169b5da07c26dbdd5d61a3bc5cbc3fe5a801bf1dd59b79b6d7e3f9a22005ae9e',  # 1.2.9.tar.gz
    # methylpy-1.2.9-foss-2021b-fixSetupConfig.patch
    '92c4723c86ae79494a8e81ce682b0bb74777e272b55616c59548546606cc2215',
]

dependencies = [
    ('Python', '3.9.6'),
    ('SciPy-bundle', '2021.10'),
    ('cutadapt', '3.5'),
    ('Bowtie2', '2.4.4'),
    ('Bowtie', '1.3.1'),
    ('SAMtools', '1.14'),
    ('picard', '2.25.1', '-Java-11', True),
    ('GSL', '2.7'),
    ('Kent_tools', '422'),
]

use_pip = True
download_dep_fail = True
sanity_pip_check = True

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'bio'
