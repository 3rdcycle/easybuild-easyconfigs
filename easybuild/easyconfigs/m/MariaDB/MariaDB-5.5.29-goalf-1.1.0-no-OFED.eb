easyblock = 'CMakeMake'

name = 'MariaDB'
version = '5.5.29'

homepage = 'https://mariadb.org/'
description = """MariaDB An enhanced, drop-in replacement for MySQL."""

toolchain = {'name': 'goalf' , 'version': '1.1.0-no-OFED'}

sources = [SOURCELOWER_TAR_GZ]

makeopts = 'VERBOSE=1'

dependencies = [
                ('ncurses' , '5.9'),
               ]

builddependencies = [
                     ('CMake', '2.8.4'),
                    ]

sanity_check_paths = {
                      'files': ['bin/mysql', 'bin/mysqld_safe', 'lib/mysqlclient.so', 'scripts/mysql_install_db'],
                      'dirs': ['include', 'share']
                     }
