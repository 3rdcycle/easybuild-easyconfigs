easyblock = 'ConfigureMake'

# Mesa demos and utilities, such as glxinfo, eglinfo and lots more

name = 'Mesa-demos'
version = '8.4.0'

homepage = 'https://www.mesa3d.org/'
description = """Mesa is an open-source implementation of the OpenGL specification -
 a system for rendering interactive 3D graphics."""

toolchain = {'name': 'GCCcore', 'version': '10.3.0'}

source_urls = [
    'https://mesa.freedesktop.org/archive/demos/'
]
sources = [SOURCELOWER_TAR_BZ2]
checksums = ['01e99c94a0184e63e796728af89bfac559795fb2a0d6f506fa900455ca5fff7d']

builddependencies = [
    ('binutils', '2.36.1'),
    ('freetype', '2.10.4'),
]

dependencies = [
    ('Mesa', '21.1.1'),
    ('glew', '2.1.0'),
    ('libGLU', '9.0.1'),
    ('freeglut', '3.2.1'),
]

sanity_check_paths = {
    'files': ['bin/eglinfo', 'bin/glxinfo'],
    'dirs': []
}

moduleclass = 'vis'
