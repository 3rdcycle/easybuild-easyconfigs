easyblock = 'GoPackage'

name = 'miller'
version = '6.4.0'
modulename = 'github.com/johnkerl/miller/cmd/mlr'

homepage = 'https://miller.readthedocs.io/'
description = """Miller is like awk, sed, cut, join, and sort for name-indexed data such as CSV, TSV, and tabular JSON"""

toolchain = SYSTEM

source_urls = ['https://github.com/johnkerl/miller/releases/download/v%(version)s']
sources = ['%(name)s-%(version)s.tar.gz']
checksums = ['20a8687a0c5b5fedf4fc3a794ef1cee7e9872e87476e1f24bde8de25799f8c51']

builddependencies = [
    ('Go', '1.18.3'),
]

#installopts = './%(namelower)s'

sanity_check_commands = [
    "mlr version",
]

moduleclass = 'tools'
