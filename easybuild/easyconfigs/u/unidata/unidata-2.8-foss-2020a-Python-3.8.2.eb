easyblock = 'PythonPackage'

name = 'unidata'
version = '2.8'
versionsuffix = '-Python-%(pyver)s'
homepage = "http://www-pcmdi.llnl.gov/software"
description = """Python wrapping for UDUNITS package developped by UNIDATA"""

toolchain = {'name': 'foss', 'version': '2020a'}

source_urls = ['https://github.com/CDAT/unidata/archive/']
sources = ['v%(version)s.tar.gz']
patches = ['unidata-2.8-package-data.patch']
checksums = [
    '5a4958af4e45a5efd9012c76cb0ef5c02d479a612e7d161e77b513780bc7b2d7',  # v2.8.tar.gz
    '63fb5979038a89d19449330d3177685425f11c51dacd8f85999af43e18187553',  # unidata-2.8-package-data.patch
]

dependencies = [
    ('Python', '3.8.2'),
    ('SciPy-bundle', '2020.03', versionsuffix),
    ('cdat_info', '8.2.1', versionsuffix),
    ('UDUNITS', '2.2.26'),
]

use_pip = True
download_dep_fail = True

sanity_check_paths = {
    'files': ['lib/python%(pyshortver)s/site-packages/%(namelower)s/udunits.dat'],
    'dirs': [],
}

moduleclass = 'lib'
