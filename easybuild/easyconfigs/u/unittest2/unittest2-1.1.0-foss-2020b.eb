easyblock = 'PythonBundle'

name = 'unittest2'
version = '1.1.0'

homepage = 'https://pypi.org/project/unittest2/'
description = """unittest2 is a backport of the new features added to the unittest testing
framework in Python 2.7 and onwards."""

toolchain = {'name': 'foss', 'version': '2020b'}

source_urls = [PYPI_SOURCE]

dependencies = [
    ('Python', '3.8.6'),
]

exts_list = [
    ('unittest2', version, {
        'patches': ['patch_unittest2.patch'],
    }),
    ('traceback2', '1.4.0'),
    ('linecache2', '1.0.0'),
]

download_dep_fail = True
use_pip = True
sanity_pip_check = True

moduleclass = 'tools'
