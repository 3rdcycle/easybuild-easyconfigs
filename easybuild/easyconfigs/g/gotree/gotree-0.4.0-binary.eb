easyblock = 'Binary'

name = 'gotree'
version = '0.4.0'
versionsuffix = "-binary"

homepage = 'https://github.com/evolbioinfo/gotree/'
description = "GoTree is a set of command line tools to manipulate phylogenetic trees."

toolchain = SYSTEM

source_urls = ['https://github.com/evolbioinfo/gotree/releases/download/v%(version)s']
sources = ['gotree_amd64_linux']
checksums = ['8527cc7082dfc46f03a1a49e02cd07da7cef94112f0b85c43de3416d53dcb188']

postinstallcmds = [
    "ln -s %(installdir)s/%(name)s_amd64_linux %(installdir)s/%(name)s",
]
sanity_check_paths = {
    'files': ['%(name)s_amd64_linux'],
    'dirs': [],
}

sanity_check_commands = [
    'gotree --help'
]

moduleclass = 'bio'
