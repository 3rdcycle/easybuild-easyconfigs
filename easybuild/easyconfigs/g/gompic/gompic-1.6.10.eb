easyblock = "Toolchain"

name = 'gompic'
version = '1.6.10'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain,
 including OpenMPI for MPI support."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

compname = 'GCC'
compver = '4.8.2'
comp = (compname, compver)

mpilib = 'OpenMPI'
mpiver = '1.7.3'

cudaname = 'CUDA'
cudaver = '5.5.22'
cudasuffix = '-' + cudaname + '-' + cudaver

# compiler toolchain dependencies
dependencies = [
    comp,
    (mpilib, mpiver, cudasuffix, comp),
]

moduleclass = 'toolchain'
