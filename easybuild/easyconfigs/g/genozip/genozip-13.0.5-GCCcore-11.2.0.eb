easyblock = 'ConfigureMake'

name = 'genozip'
version = '13.0.5'


homepage = 'https://genozip.com'
description = """Genozip is a compressor for genomic files - it compresses FASTQ, SAM/BAM/CRAM, VCF, FASTA and others. Documentation: genozip.com. Support: support@genozip.com"""

toolchain = {'name': 'GCCcore', 'version': '11.2.0'}

source_urls = ['https://github.com/divonlan/genozip/archive/refs/tags/']
sources = ['%(name)s-%(version)s.tar.gz']

builddependencies = [
    ('binutils', '2.37')
]

skipsteps = ['configure']

installopts = 'PREFIX=%(installdir)s'

sanity_check_commands = ['genozip --help']

sanity_check_paths = {
    'files': ['bin/genocat', 'bin/genozip', 'bin/genounzip', 'bin/genols'],
    'dirs': ['bin'],
}

moduleclass = 'bio'