easyblock = 'CMakeMake'

name = 'GROMACS'
version = '4.6'
versionsuffix = '-k10'

homepage = 'http://www.gromacs.org'
description = """GROMACS is a versatile package to perform molecular dynamics,
  i.e. simulate the Newtonian equations of motion for systems with hundreds to millions of particles."""

toolchain = {'name': 'goolfc', 'version': '1.3.12'}
# note sm_35 yields slower code than sm_30!
toolchainopts = {'cuda_gencode': ['arch=compute_30,code=sm_30']}

# eg. ftp://ftp.gromacs.org/pub/gromacs/gromacs-4.6.tar.gz
sources = [SOURCELOWER_TAR_GZ]
source_urls = ['ftp://ftp.gromacs.org/pub/gromacs/']

builddependencies = [('CMake', '2.8.4')]

# take control and explicitely set CUDA compiler options
# -use_fast_math is used by default by GROMACS, so we add it here as well
#configopts = '-DCUDA_NVCC_FLAGS="-use_fast_math $CUDA_CXXFLAGS" -DCUDA_NVCC_FLAGS_SET=TRUE'

moduleclass = 'bio'
