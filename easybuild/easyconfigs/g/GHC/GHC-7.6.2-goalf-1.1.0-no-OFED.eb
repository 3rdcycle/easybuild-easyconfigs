name = 'ghc'
version = '7.6.2'

homepage = 'http://www.haskell.org/ghc'
description = """GHC is the Glasgow Haskell Compiler."""

toolchain = {'name': 'goalf', 'version': '1.1.0-no-OFED'}

sources = ['%s-%s-x86_64-unknown-linux.tar.bz2' % (name.lower(), version)]
sourceURLs = ['http://www.haskell.org/ghc/dist/7.6.2/%s' % name.lower()]

dependencies = [
    ('GMP', '5.0.5'),
    ('zlib', '1.2.7'),
    ]

builddependencies = [('GHC', '7.4.2', '1.1.0-no-OFED', True)]

configopts = " --enable-error-on-warning=no"

sanityCheckPaths = {
                    'files': ["bin/%s" % x for x in []] + [],
                   'dirs':[]
                   }
