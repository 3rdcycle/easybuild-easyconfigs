easyblock = 'PythonBundle'

name = 'torchdata'
version = '0.3.0'
local_pytorch_version = '1.11.0'
versionsuffix = '-PyTorch-' + local_pytorch_version + '-CUDA-%(cudaver)s'

homepage = 'https://github.com/pytorch/data'
description = "TorchData is a prototype library of common modular data loading primitives for easily constructing flexible and performant data pipelines."

toolchain = {'name': 'foss', 'version': '2021a'}

dependencies = [
    ('CUDA', '11.3.1', '', True),
    ('Python', '3.9.5'),
    ('PyTorch', local_pytorch_version, '-CUDA-%(cudaver)s'),
]

sanity_pip_check = True
use_pip = True

exts_list = [
    (name, version, {
        'source_tmpl': 'v%(version)s.tar.gz',
        'source_urls': ['https://github.com/pytorch/data/archive'],
    }),
]

moduleclass = 'lib'
