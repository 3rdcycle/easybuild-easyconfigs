name='OpenMPI'
version='1.4.5'

homepage='http://www.open-mpi.org/'
description="The Open MPI Project is an open source MPI-2 implementation."

toolkit={'name':'GCC','version':'4.6.3'}

sources=['%s-%s.tar.gz'%(name.lower(),version)]

configopts='--with-threads=posix --enable-shared --with-openib --with-udapl '

osdependencies=[
                'libibverbs-devel', # required for OFED support
                'dapl-devel', # required for uDAPL support
                'libibumad-devel' # required for OFED support
                ]

moduleclass='compiler'
