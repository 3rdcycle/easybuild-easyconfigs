easyblock = 'MakeCp'
name = 'BEDTools'
version = 'v2.17.0'

homepage = 'http://code.google.com/p/bedtools/'
description = """SCOOP (Scalable COncurrent Operations in Python) is a distributed task module
 allowing concurrent parallel programming on various environments, from heterogeneous grids to supercomputers."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ["http://bedtools.googlecode.com/files/"]
sources = ['%(name)s.%(version)s.tar.gz']

dirs =  ["bin",  "data",  "docs",  "genomes", 'scripts']
# copy all directories to the installation directory
files_to_copy = dirs

sanity_check_paths = {'files': [], 'dirs': dirs}

moduleclass = 'bio'
