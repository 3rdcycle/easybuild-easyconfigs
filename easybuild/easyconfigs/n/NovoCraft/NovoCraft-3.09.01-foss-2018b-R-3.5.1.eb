# or CentOS 5.10 (Linux2.6.32).
sources = ['%(namelower)sV%(version)s.Linux3.10.0.tar.gz']
#sources = ['%(namelower)sV%(version)s.Linux2.6.32.tar.gz']
patches = ['%(name)sV%(version)s.patch']
checksums = [
    '08c9cef29ba9c10f81946e7287912982b009a54fb47a226302d99399c19a5b97',  # novocraftV3.09.01.Linux3.10.0.tar.gz
