easyblock = 'PythonPackage'

name = 'networkx'
version = '2.6.1'

homepage = 'https://pypi.python.org/pypi/networkx'
description = """NetworkX is a Python package for the creation, manipulation,
and study of the structure, dynamics, and functions of complex networks."""

toolchain = {'name': 'foss', 'version': '2021a'}

sources = [SOURCE_TAR_GZ]
checksums = ['bf4cb807d1bccf1593c7d0742d9127d9e04e021867299082658b0fc3907924e8']

#patches = ['%(name)s-%(version)s_decorator.patch']

dependencies = [
    ('Python', '3.9.5'),
    ('SciPy-bundle', '2021.05'),  # required for numpy, scipy, ...
    ('matplotlib', '3.4.2'),
]

use_pip = True
download_dep_fail = True
sanity_pip_check = True

moduleclass = 'tools'
