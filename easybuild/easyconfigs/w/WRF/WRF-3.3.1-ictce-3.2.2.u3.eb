name='WRF'
version='3.3.1'

homepage='http://www.wrf-model.org'
description="The Weather Research and Forecasting (WRF) Model is a next-generation mesoscale numerical weather prediction system designed to serve both operational forecasting and atmospheric research needs."

toolkit={'name':'ictce','version':'3.2.2.'}
toolkitopts={'opt':False, 'optarch':False} # don't use agressive optimization, stick to -O2

sources=['%sV%s.TAR.gz'%(name,version)]
sourceURLs=['http://www.mmm.ucar.edu/wrf/src/']

dependencies=[('netCDF','4.1.3')]

patches=['WRF_fix_parallel_build.patch']

# limit parallel build to 20
maxparallel=20

wrfbuildtype="dmpar"
versionsuffix='-%s'%wrfbuildtype