easyblock = 'PythonPackage'

name = 'P4'
version = '1.3.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://p4.nhm.ac.uk/'
description = """A Python phyloinformatic toolkit, and an implementation of tree-heterogeneous models of evolution."""

toolchain = {'name': 'foss', 'version': '2019b'}

req_py_majver = '3.7.4'
sanity_pip_check = True

# download via https://github.com/pgfoster/p4-phylogenetics
source_urls = ['https://github.com/pgfoster/p4-phylogenetics/archive/']
sources = ['master.tar.gz']
checksums = ['28df06807475ed7da5836e11041f1ef951f16b894ae2666d4706a859c8a9ee42']

dependencies = [
    ('Python', '3.7.4'),
    ('SciPy-bundle', '2019.10', versionsuffix),
    ('bitarray', '1.2.1', versionsuffix)
]

sanity_check_commands = [('p4 --help')]

moduleclass = 'bio'
