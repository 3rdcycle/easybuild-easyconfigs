name='netCDF4-python'
version='1.0fix1'
easyblock='NetCDF4'

homepage='http://code.google.com/p/netcdf4-python/'
description="Python interface to the netCDF version 4 library. netCDF version 4 has many features not found in earlier versions of the library and is implemented on top of HDF5."

toolkit={'name':'iqacml','version':'4.0.4'}
toolkitopts={'pic':True,'opt':True,'optarch':True, 'usempi': True } 


dependencies = [
    ('netCDF', '4.1.3','-parallelHDF5'), #we need HDF5 here, this is also a dependency actually, but get's loaded by netCDF
    ('Python','2.7.3'),
]

sources=['netCDF4-%s.tar.gz'%(version)]
sourceURLs=[
    'http://netcdf4-python.googlecode.com/files/', #netcdf4-python
]

configopts="--with-threads --enable-shared"

moduleclass='base'

