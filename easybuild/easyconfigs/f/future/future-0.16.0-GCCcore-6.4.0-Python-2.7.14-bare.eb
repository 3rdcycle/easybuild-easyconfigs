easyblock = 'PythonPackage'

name = 'future'
version = '0.16.0'
versionsuffix = '-Python-%(pyver)s-bare'

homepage = 'http://python-future.org/'
description = """
 python-future is the missing compatibility layer between Python 2 and Python 3.
"""

toolchain = {'name': 'GCCcore', 'version': '6.4.0'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = [
    'e39ced1ab767b5936646cedba8bcce582398233d6a627067d4c6a454c90cfedb',  # future-0.16.0.tar.gz
]

builddependencies = [
    # use same binutils version that was used when building GCCcore
    ('binutils', '2.28'),
]

dependencies = [('Python', '2.7.14', '-bare')]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'lib'
