easyblock = 'CMakeMake'

name = 'liknorm'
version = '1.4.6'

homepage = 'https://github.com/limix/liknorm'
description = """Moments of the product of an exponential-family likelihood with a Normal distribution."""

toolchain = {'name': 'GCC', 'version': '7.3.0-2.30'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/limix/liknorm/archive/']
sources = ['%(version)s.tar.gz']
checksums = ['7661d407a53af684debf7a0ed2f54f6b34493abe1bb4f8a4defd431edb688af0']

builddependencies = [
    ('CMake', '3.12.1')
]

sanity_check_paths = {
    'files': ['include/liknorm.h', 'lib/libliknorm.%s' % SHLIB_EXT, 'lib/libliknorm_static.a'],    
    'dirs': ['lib', 'include']
}

moduleclass = 'lib'
