easyblock = 'CMakeMake'

name = 'libplinkio'
version = '0.9.8'

homepage = "https://github.com/mfranberg/libplinkio"
description = """A small C and Python library for reading PLINK genotype files."""

toolchain = {'name': 'GCCcore', 'version': '8.3.0'}

source_urls = ['https://github.com/mfranberg/%(namelower)s/archive/refs/tags']
sources = ['v%(version)s.tar.gz']
checksums = ['de54dd4789b2da9b937a1f445dc6976153211dc35b4376a4cf561ad2ee861075']

builddependencies = [
    ('CMake', '3.15.3'),
    ('binutils', '2.32'),
]

parallel = 1

sanity_check_paths = {
    'files': ['lib/%(name)s.so'],
    'dirs': ['lib', 'include'],
}

moduleclass = 'lib'
