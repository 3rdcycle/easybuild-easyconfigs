name='libsmm'
version='20111205'

homepage='http://cp2k.berlios.de/index.html'
description="""libsmm is part of CP2K. It is a library tuned for small size matrix multiplication, an area where regular BLAS is not so well-tuned. The source can be found in the tools/build_libssm directory of CP2K code."""

toolkit={'name':'goalf','version':'1.1.0-no-OFED'}

sources=['CP2K-%s.tar.gz'%version]

# NOTE: settings below are only to limit the required build time during EasyBuild regression test
# these settings should not be used in a production build of libsmm
# if you're not sure how to set them, just use the default values by not overriding them here
max_tiny_dim = 3
dims = [1,5,13]